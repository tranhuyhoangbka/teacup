<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-default">
        <thead>
          <tr>
            <th>id</th>
            <th>Title</th>
            <th>Content</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td><%= post.title %></td>
              <td><%= post.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>